<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= user?.username %> | Links</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="css/style.css">
</head>

<body class="d-flex align-items-center py-4">

  <main class="container text-center">
    <div class="profile-card mx-auto p-3">

      <img src="<%= profile?.profilePicture %>" alt="Profile Picture" class="profile-pic rounded-circle mb-3 shadow">

      <h1 class="username h2">@<%= profile?.displayName %></h1>

      <p class="bio mb-4 px-3"><%= profile?.bio %></p>

      <div class="d-grid gap-3">

        <% links.forEach(link => { %>
         <a href="<%= link?.url %>" class="btn btn-glass btn-lg" role="button">
          <i class="bi <%= link?.icon %> me-2"></i> <%= link?.title %>
        </a>
        <% }) %>

      </div>
      <div class="social-icons mt-5">
        <a href="#" class="mx-3"><i class="bi bi-instagram"></i></a>
        <a href="#" class="mx-3"><i class="bi bi-github"></i></a>
        <a href="#" class="mx-3"><i class="bi bi-linkedin"></i></a>
      </div>

    </div>

    <footer class="mt-5 text-white-50">
      <p>&copy; 2025 <%= user?.username %>. All rights reserved.</p>
    </footer>

  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>